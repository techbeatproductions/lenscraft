<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_green"
    tools:context=".Onboarding1">

    <ImageView
        android:id="@+id/backgroundImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"

        app:srcCompat="@drawable/onboarding2" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.4"
        android:background="@color/black"
        app:cardBackgroundColor="@color/black" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/logoFragmentContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="31dp"
        android:elevation="2dp" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/welcomeFragmentContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoFragmentContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="457dp"
        android:layout_marginEnd="24dp"
        android:elevation="2dp" />

    <TextView
        android:id="@+id/onboardingCaption1Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeFragmentContainer"
        android:layout_centerHorizontal="true"
        android:elevation="2dp"
        android:fontFamily="@font/raleway_regular"
        android:text="@string/welcome_caption"
        android:textColor="@color/secondary_brown"
        android:textSize="12sp" />

    <Button
        android:id="@+id/nextBtn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/onboardingCaption1Tv"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/lenscraft_custom_button"
        android:fontFamily="@font/raleway_extra_bold"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/primary_green"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/screenSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nextBtn1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"

        android:elevation="2dp"
        app:srcCompat="@drawable/onboarding_screen_swipe1" />


</RelativeLayout>