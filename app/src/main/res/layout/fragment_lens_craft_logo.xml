<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="24dp"
    android:layout_marginTop="31dp"
    tools:context=".fragments.LensCraftLogo">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/logoTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rage"
        android:text="@string/app_name"
        android:textColor="@color/secondary_brown"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/logo_captionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoTv"
        android:fontFamily="@font/raleway_light"
        android:text="@string/moments_shared"
        android:textColor="@color/secondary_brown"
        android:textSize="12sp" />


</RelativeLayout>